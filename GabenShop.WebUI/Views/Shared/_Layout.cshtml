<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="Content/reset.css" type="text/css" media="screen">
    <link rel="stylesheet" href="Content/style.css" type="text/css" media="screen">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <style>
        #button {
            position: center;
            clear: both;
            text-decoration: none;
            text-align: center;
            padding: 6px 8px;
            margin-left: 10px;
            border: solid 1px #989e9a;
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;
            font: 11px Arial, Helvetica, sans-serif;
            font-weight: bold;            
            color: #ffffff;
            background-color: #05f519;
            background-image: -moz-linear-gradient(top, #05f519 0%, #009e12 100%);
            background-image: -webkit-linear-gradient(top, #05f519 0%, #009e12 100%);
            background-image: -o-linear-gradient(top, #05f519 0%, #009e12 100%);
            background-image: -ms-linear-gradient(top, #05f519 0%,#009e12 100%);
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#009e12', endColorstr='#009e12',GradientType=0 );
            background-image: linear-gradient(top, #05f519 0%,#009e12 100%);
            -webkit-box-shadow: 0px 0px 2px #bababa, inset 0px 0px 1px #ffffff;
            -moz-box-shadow: 0px 0px 2px #bababa, inset 0px 0px 1px #ffffff;
            box-shadow: 0px 0px 2px #bababa, inset 0px 0px 1px #ffffff;
        }

            #button:hover {
                background-color: #ffd800;
            }
    </style>

</head>
<body>
    <div class="container">
        <header>
            <!-- Defining the header section of the page -->
            <nav>
                <!-- Defining the navigation menu -->
                <ul>
                    <li class="selected"><a href="#">Главная</a></li>
                    <li><a href="#">Мои заказы</a></li>                    
                    <li><a href="#">Вход</a></li>
                    <li><a href="#">Регистрация</a></li>
                    @Html.Action("Summary", "Cart")
                </ul>
            </nav>
            <section id="submenu">
                <!-- Defining the sub menu -->
                <ul>
                    @Html.Action("Menu", "Nav")
                </ul>
            </section>
        </header>

        <div id="main">
            <div>
                
            </div>
            @RenderBody()
        </div>

        <footer></footer>
    </div>

    
    <div>
        
        
    </div>
</body>
</html>
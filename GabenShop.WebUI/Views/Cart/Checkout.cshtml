@model GabenShop.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "GabenShop: форма заказа";
}


<div id="orderCompleted">    
    <table>
        <tr>
            <td colspan="2"><h1 style="margin-bottom:13px; color:black;">Оформление заказа</h1></td>
        </tr>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <tr>
                <td>                    
                    <label>Ваше имя </label>                    
                </td>                
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })
                    </div>
                </td>
            </tr>
            foreach (var property in ViewData.ModelMetadata.Properties)
            {
                if (property.PropertyName != "Name" && property.PropertyName != "GiftWrap")
                {
                    <tr>
                        <td>
                            <label> @(property.DisplayName ?? property.PropertyName)</label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.TextBox(property.PropertyName, null, new { @class = "form-control", required = "required"})
                            </div>
                        </td>
                    </tr>                    
                }
            }
            <tr>
                <td>
                    <div>
                        <input type="submit" value="Обработать заказ" class="sort"/>
                    </div>
                </td>
            </tr>            
        }
    </table>    
</div>
